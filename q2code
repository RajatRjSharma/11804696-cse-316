#include<stdio.h> 
 
int main() 
{ 
 
  int co,mn,samy,bacha,chda=0,samyquantum; 
  int ruksamy=0,gumchakersamy=0,ayyat[10],jalt[10],root[10],pr[10]; 
  char cr;
  printf("Enter No.of Process:"); 
  scanf("%d",&mn); 
  bacha=mn; 
  for(co=0,cr='A';co<mn;co++,cr++) 
  { 
    printf("Arrival time for process %c :",cr); 
    scanf("%d",&ayyat[co]); 
    printf("Burst time for process %c :",cr); 
    scanf("%d",&jalt[co]);
	printf("Priority for process %c :",cr);
    scanf("%d",&pr[co]); 
    root[co]=jalt[co]; 
    printf("-------------------------------\n");
  } 
  printf("Time Quantum is :"); 
  scanf("%d",&samyquantum); 
  printf("\n\nProcess\t|Turnaround Time|Waiting Time\n"); 
  printf("----------------------------------------\n");
  for(samy=0,co=0;bacha!=0;) 
  { 
    if(root[co]<=samyquantum && root[co]>0) 
    { 
      samy+=root[co]; 
      root[co]=0; 
      chda=1; 
    } 
    else if(root[co]>0) 
    { 
      root[co]-=samyquantum; 
      samy+=samyquantum; 
    } 
    if(root[co]==0 && chda==1) 
    { 
      bacha--; 
      printf("%c\t|\t%d\t|\t%d\n",co+65,samy-ayyat[co],samy-ayyat[co]-jalt[co]); 
      ruksamy+=samy-ayyat[co]-jalt[co]; 
      gumchakersamy+=samy-ayyat[co]; 
      chda=0; 
    } 
    if(co==mn-1) 
      co=0; 
    else if(ayyat[co+1]<=samy) 
      co++; 
    else 
      co=0; 
  } 
  printf("\nAvg Waiting time is = %f\n",ruksamy*1.0/mn); 
  printf("Avg Turnaround time is = %f",gumchakersamy*1.0/mn); 
  
  return 0; 
}
